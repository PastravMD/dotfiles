! general
! ------------------------------------------------------------------------------
Xcursor.size: 24

! ------------------------------------------------------------------------------
! URxvt
! -----------------------------------------------------------------------------
URxvt*saveline: 15000
URxvt*saveLines: 15000
URxvt*termName: rxvt-256color
URxvt*iso14755: false
URxvt*depth: 32
URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*internalBorder: 0
URxvt*externalBorder: 0
URxvt*letterSpace: -1
!URxvt*font: xft:Inconsolata:pixelsize=20:antialias=true:hinting=true
URxvt*font: xft:Inconsolata for Powerline:pixelsize=20:antialias=true:hinting=true
URxvt*boldFont: xft:Inconsolata:bold:pixelsize=20:antialias=true:hinting=true
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.m-c: perl:clipboard:copy
URxvt.keysym.m-v: perl:clipboard:paste
URxvt.urlLauncher: exo-open
URxvt.underlineURLs: true
URxvt.urlButton: 1
URxvt*geometry:  115x40
URxvt.tabbed.tabbar-fg: 4
URxvt.tabbed.tabbar-bg: 16
URxvt.tabbed.tab-fg: 15
URxvt.tabbed.tab-bg: 4
URxvt*buffered: false
URxvt.transparent: true
URxvt.shading: 15
URxvt.fading: 30
URxvt.fadecolor: color1

! ------------------------------------------------------------------------------
! Rofi
! ------------------------------------------------------------------------------
rofi.font: Inconsolata 10
rofi.color-enabled: true
rofi.color-window: #2b303b, #2b303b, #2b303b
rofi.color-normal: #2b303b, #c0c5ce, #2b303b, #8fa1b3, #2b303b
rofi.separator-style: solid
